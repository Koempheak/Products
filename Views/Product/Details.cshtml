@model Products.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title"> Details Category</h5>
    </div>
    <div class="card-body">
       
        <dl class="row">
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.Manufacturer)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.Categories.CategoryName)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.Categories.CategoryName)
            </dd>
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2 mt-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10 mt-2">
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-sm edit-btn"> <i class="fa-solid fa-pen-to-square"></i> Edit</a> |
            <a asp-action="Index"> <i class="fa fa-arrow-left"></i> Back to List</a>
        </div>
    </div>
   
</div>