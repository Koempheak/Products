@model Product

@{
	ViewData["Title"] = "Create Product";
}

<div class="card">
	<div class="card-header">
		<h5 class="card-title">Create Products</h5>
	</div>
	<div class="card-body">
		<div class="col-md-12">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group mt-2">
					<label asp-for="ProductName" class="control-label"></label>
					<input asp-for="ProductName" class="form-control" />
					<span asp-validation-for="ProductName" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Manufacturer" class="control-label"></label>
					<input asp-for="Manufacturer" class="form-control" />
					<span asp-validation-for="Manufacturer" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label class="control-label">CategoryName</label>
					<select asp-for="CetegoryId" class="form-control" asp-items="ViewBag.Categories">
						<option value="">--Select Category--</option>
					</select>
					<span asp-validation-for="CetegoryId" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Price" class="control-label"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="form-group mt-2">
					<label asp-for="Quantity" class="control-label"></label>
					<input asp-for="Quantity" class="form-control" />
					<span asp-validation-for="Quantity" class="text-danger"></span>
				</div>

				<div class="form-group mt-2">
					<label asp-for="Description" class="control-label"></label>
					@* <input asp-for="Description" class="form-control" /> *@
					<textarea class="form-control" asp-for="Description"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>

				</div>

				<div class="form-group mt-2">
					<button type="submit" class="btn btn-primary btn-sm" value="Create"><i class="fa fa-square-plus"></i> Create</button>
					@* <input type="submit" value="Create" class="btn btn-primary btn-sm" /> *@
					<a asp-action="Index" style="margin-left: 10px;" class="btn btn-danger btn-sm"> <i class="fa fa-arrow-left"></i> Back to List</a>
				</div>
			</form>
		</div>
	</div>
</div>




@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

