@model Products.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header">
        <h5> Create Category</h5>
    </div>
    <div class="card-body">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control mt-1" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-primary btn-sm" value="Create"><i class="fa fa-square-plus"></i> Create</button>
                    @* <input type="submit" value="Create" class="btn btn-primary btn-sm" /> *@
                    <a asp-action="Index" style="margin-left: 10px;" class="btn btn-danger btn-sm"> <i class="fa fa-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
